---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Video Production Services in Salt Lake City Utah">
  
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-bg">
      <img src="/images/hero-background.jpg" alt="video production services in utah" />
    </div>
    <div class="hero-content">
      <div class="hero-text">
        <h1>Video Production Services in Salt Lake City Utah</h1>
        <h2>Music video production, commercial photography, brand videos and much more</h2>
      </div>
    </div>
  </section>

  <!-- Looking For Section -->  
  <section class="looking-for">
    <div class="container">
      <h2>Looking for The best video &amp; photography services in Utah?</h2>
    </div>
  </section>

  <!-- Services Section -->
  <section class="services">
    <div class="container">
      <div class="services-grid">
        
        <div class="service">
          <a href="/utah-video-production">
            <img src="/images/video-business.jpg" alt="salt lake city video production services" />
          </a>
          <h3>Video for Business</h3>
          <p>Cinematic visuals that elevate your brand, combined with a deep understanding of your marketing needs. We deliver stunning video at a price that works for small businesses.</p>
        </div>

        <div class="service">
          <a href="/music-video-production">
            <img src="/images/music-video.jpg" alt="video production and commercial photography utah" />
          </a>
          <h3>Music Video Production</h3>
          <p>Music videos that bring your sound to life, delivering major-label quality on an independent budget. Drawing on years of cinematic expertise, we create visually striking narratives that amplify your music and help you stand out in today's crowded digital landscape.</p>
        </div>

        <div class="service">
          <a href="/commercial-photography">
            <img src="/images/commercial-photography.jpg" alt="utah video production services" />
          </a>
          <h3>Commercial, Lifestyle, &amp; Product Photography</h3>
          <p>Tell your brand's story through compelling visuals. We create high-quality commercial, lifestyle, and product photography that connects with your audience.</p>
        </div>

      </div>
    </div>
  </section>

  <!-- Centered CTA Section -->
  <section class="centered-cta">
    <div class="container">
      <a href="/contact" class="btn-centered">Book Your Shoot Now</a>
    </div>
  </section>

  <!-- Sample Reel Section -->
  <section class="sample-reel">
    <div class="container">
      <h3>Sample Reel</h3>
      <div class="video-embed">
        <iframe src="https://player.vimeo.com/video/444256006?h=0&title=0&byline=0&portrait=0" 
                width="640" 
                height="360" 
                frameborder="0" 
                allow="autoplay; fullscreen; picture-in-picture" 
                allowfullscreen>
        </iframe>
      </div>
    </div>
  </section>

  <!-- Footer Section -->
  <section class="footer-content">
    <div class="container">
      
      <!-- Contact Info & Social Media -->
      <div class="footer-top">
        <div class="contact-info">
          <p class="email">hello@gobigfilms.com</p>
          <p class="phone">
            <a href="tel:4352815900">(435) 281-5900</a>
          </p>
        </div>
        
        <div class="social-links">
          <a href="https://www.instagram.com/gobigfilms" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
