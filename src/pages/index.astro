            width="400" 
            height="250" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade"
            title="Salt Lake City Location">
          </iframe>
        </div>
      </div>
      
    </div>
  </section>

</BaseLayout>

<style>
  /* Global reset for full screen hero */
  * {
    box-sizing: border-box;
  }
  
  html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    overflow-x: hidden;
  }
  
  main {
    width: 100%;
    margin: 0 auto;
  }
  
  section {
    width: 100%;
    margin: 0 auto;
  }
  
  /* Simple, clean layout matching original */
  
  /* Global container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  /* Hero Section */
  .hero {
    position: relative;
    height: 100vh;
    width: 100vw;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    margin: 0;
    padding: 0;
  }
  
  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .hero-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 44% 15%;
  }
  
  .hero-bg::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
  }
  
  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 800px;
    padding: 0 2rem;
  }
  
  .hero-text {
    background: rgba(235, 235, 235, 0.4);
    border-radius: 22px;
    padding: 3rem 2rem;
    backdrop-filter: blur(10px);
  }
  
  .hero-text h1 {
    font-family: 'Epilogue', sans-serif;
    font-size: 3.5rem;
    font-weight: 700;
    color: #2c2c2c;
    margin: 0 0 1.5rem 0;
    line-height: 1.1;
  }
  
  .hero-text h2 {
    font-family: 'Epilogue', sans-serif;
    font-size: 2rem;
    font-weight: 700;
    color: #2c2c2c;
    margin: 0;
    line-height: 1.2;
  }
  
  /* Looking For Section */
  .looking-for {
    background: #000;
    padding: 5rem 0;
    text-align: center;
    width: 100%;
  }
  
  .looking-for h2 {
    font-family: 'Epilogue', sans-serif;
    font-size: 2.5rem;
    font-weight: 700;
    color: white;
    margin: 0;
    line-height: 1.3;
  }
  
  /* Services Section */
  .services {
    background: #000;
    padding: 5rem 0;
    width: 100%;
  }
  
  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 4rem;
  }
  
  .service {
    text-align: center;
    color: white;
  }
  
  .service a {
    display: block;
    margin-bottom: 2rem;
  }
  
  .service img {
    width: 100%;
    max-width: 350px;
    height: 350px;
    object-fit: cover;
    border-radius: 12px;
    transition: transform 0.3s ease;
  }
  
  .service a:hover img {
    transform: scale(1.05);
  }
  
  .service h3 {
    font-family: 'Epilogue', sans-serif;
    font-size: 1.4rem;
    font-weight: 700;
    color: white;
    margin: 1.5rem 0 1rem 0;
    line-height: 1.3;
  }
  
  .service p {
    font-family: 'Pontano Sans', sans-serif;
    font-size: 1rem;
    line-height: 1.6;
    color: #ccc;
    margin-bottom: 2rem;
  }
  
  .service .btn {
    display: inline-block;
    background: #7DCBC4;
    color: #000;
    padding: 12px 24px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }
  
  .service .btn:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  /* Centered CTA Section */
  .centered-cta {
    background: #000;
    padding: 3rem 0;
    text-align: center;
    width: 100%;
  }

  .btn-centered {
    display: inline-block;
    background: #7DCBC4;
    color: #000;
    padding: 12px 24px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-centered:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  /* Sample Reel Section */
  .sample-reel {
    background: #000;
    padding: 5rem 0;
    text-align: center;
    width: 100%;
  }
  
  .sample-reel h3 {
    font-family: 'Epilogue', sans-serif;
    font-size: 2rem;
    font-weight: 700;
    color: white;
    margin-bottom: 3rem;
  }
  
  .video-embed {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .video-embed iframe {
    width: 100%;
    height: 450px;
    border-radius: 12px;
  }
  
  /* Footer Content Section */
  .footer-content {
    background: #000;
    padding: 5rem 0 3rem 0;
    width: 100%;
  }
  
  /* Footer Top - Contact & Social */
  .footer-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 3rem;
    border-bottom: 1px solid #333;
    margin-bottom: 3rem;
  }
  
  .contact-info p {
    font-family: 'Pontano Sans', sans-serif;
    font-size: 1.1rem;
    margin: 0.5rem 0;
    color: white;
  }
  
  .contact-info .email {
    font-weight: 600;
  }
  
  .contact-info .phone a {
    color: #7DCBC4;
    text-decoration: none;
    font-weight: 600;
    transition: opacity 0.3s ease;
  }
  
  .contact-info .phone a:hover {
    opacity: 0.8;
  }
  
  .social-links {
    display: flex;
    gap: 1.5rem;
  }
  
  .social-links a {
    width: 48px;
    height: 48px;
    background: #222;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transition: all 0.3s ease;
  }
  
  .social-links a:hover {
    background: #7DCBC4;
    color: #000;
    transform: translateY(-2px);
  }
  
  /* Footer Navigation */
  .footer-nav {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 4rem;
    margin-bottom: 4rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid #333;
  }
  
  .nav-column h4 {
    font-family: 'Epilogue', sans-serif;
    font-size: 1.2rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .nav-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .nav-column li {
    margin-bottom: 0.8rem;
  }
  
  .nav-column a {
    font-family: 'Pontano Sans', sans-serif;
    font-size: 1rem;
    color: #ccc;
    text-decoration: none;
    transition: all 0.3s ease;
    display: block;
    padding: 0.2rem 0;
  }
  
  .nav-column a:hover {
    color: #7DCBC4;
    padding-left: 0.5rem;
  }
  
  /* Footer Bottom - Company Info & Map */
  .footer-bottom {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 4rem;
    align-items: start;
  }
  
  .company-info h2 {
    font-family: 'Epilogue', sans-serif;
    font-size: 2rem;
    font-weight: 700;
    color: white;
    margin-bottom: 2rem;
    line-height: 1.3;
  }
  
  .locations {
    display: flex;
    gap: 3rem;
  }
  
  .locations h4 {
    font-family: 'Epilogue', sans-serif;
    font-size: 1.1rem;
    font-weight: 600;
    color: #7DCBC4;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .map-container {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }
  
  .map-container iframe {
    width: 100%;
    height: 250px;
    border: none;
    filter: grayscale(20%) contrast(1.1);
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .services-grid {
      gap: 3rem;
    }
    
    .service img {
      max-width: 300px;
      height: 300px;
    }
    
    .hero-text h1 {
      font-size: 2.5rem;
    }
    
    .hero-subtitle h2 {
      font-size: 1.5rem;
    }
  }
  
  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    
    .hero-text h1 {
      font-size: 2rem;
    }
    
    .hero-subtitle h2 {
      font-size: 1.3rem;
    }
    
    .hero-text {
      padding: 2rem 1.5rem;
    }
    
    .looking-for h2 {
      font-size: 2rem;
    }
    
    .locations {
      flex-direction: column;
      gap: 1rem;
    }
    
    .footer-top {
      flex-direction: column;
      gap: 2rem;
      text-align: center;
    }
    
    .footer-nav {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }
    
    .footer-bottom {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }
    
    .map-container {
      max-width: 400px;
      margin: 0 auto;
    }
    
    .locations {
      justify-content: center;
    }
  }
  
  @media (max-width: 480px) {
    .hero-text h1 {
      font-size: 1.5rem;
    }
    
    .hero-text h2 {
      font-size: 1.1rem;
    }
    
    .hero-text {
      padding: 1.5rem 1rem;
    }
    
    .container {
      padding: 0 1rem;
    }
    
    .video-embed iframe {
      height: 250px;
    }
    
    .footer-bottom {
      grid-template-columns: 1fr;
    }
    
    .company-info h2 {
      font-size: 1.5rem;
    }
    
    .map-container {
      max-width: 100%;
    }
    
    .map-container iframe {
      height: 200px;
    }
    
    .social-links a {
      width: 40px;
      height: 40px;
    }
    
    .social-links svg {
      width: 20px;
      height: 20px;
    }
  }
</style>